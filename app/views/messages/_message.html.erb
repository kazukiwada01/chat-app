<div class="message">
  <div class="send-message">
    <div class="sender">
      <%= message.user.name %>

    </div>
    <div class="send-date">
      <%= l message.created_at %>

    </div>
  </div>
  <div class="send-text">
    <%= message.content %>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
  </div>
</div>